{
	"metadata": {
		"name": "jenkinsmaster"
	},
	"apiVersion": "v1beta3",
	"kind": "Pod",
	"spec": {
		"containers":[
			{
				"name": "jenkinsmaster",
				"image": "elibixby/jenkins_master",
				"imagePullPolicy": "Always",
				"ports": [
					{
						"name": "webui",
						"containerPort": 8080
					},
					{
						"name": "slavelistener",
						"containerPort": 50000
					}
				],
				"volumeMounts": [
					{
						"name": "jenkinsconfig",
						"mountPath": "/var/jenkins_home"

					},
					{
						"name": "kubernetesauth",
						"mountPath": "/etc/auth"
					}

				]
			}
		],
		"volumes": [
			{
				"name": "jenkinsconfig",
				"source": {
					"persistentDisk": {
						"fsType": "gcePersistentDisk"
					}
				}
			},
			{
				"name": "kubernetesauth",
				"source": {
					"secret": {
						"secretName": "kubernetesauth"
					}
				}
			}
		]
	},
	"labels": {
		"role": "master"
	}
}
